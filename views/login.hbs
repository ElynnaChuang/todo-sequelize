<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{!-- {{> message}} --}}
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="mb-4">
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="d-block w-100 mb-2 btn btn-primary">Login</button>
      </form>

      <div class="d-flex align-items-center mt-4">
        <hr style="width: 35%" class="me-auto">
        <p class="m-0">其他登入方式</p>
        <hr style="width: 35%" class="ms-auto">
      </div>
      <div class="d-grid mt-3">
        <a href="/auth/facebook" class="btn btn-info btn-block">以Facebook登入</a>
      </div>
      <p class="lead d-flex justify-content-center mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>

    </div>
  </div>
</div>